{
  "name": "terminal-banner",
  "description": "Banner text across your terminal. Great separator for tests or long running operations.",
  "version": "1.1.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/terminal-banner/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm run build",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run unused-deps",
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "src/*.ts"
  ],
  "homepage": "https://github.com/bahmutov/terminal-banner#readme",
  "keywords": [
    "terminal",
    "banner",
    "test"
  ],
  "license": "MIT",
  "main": "dist",
  "module": "src",
  "private": false,
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/terminal-banner.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/spec*.js",
    "unused-deps": "dependency-check --unused --no-dev .",
    "build": "tsc",
    "semantic-release": "semantic-action pre && npm publish && semantic-action post"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release"
  },
  "devDependencies": {
    "@types/mocha": "2.2.46",
    "@types/node": "9.3.0",
    "ban-sensitive-files": "1.9.2",
    "dependency-check": "2.10.0",
    "deps-ok": "1.2.1",
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "license-checker": "15.0.0",
    "mocha": "4.1.0",
    "nsp": "3.1.0",
    "pre-git": "3.17.0",
    "prettier-standard": "8.0.0",
    "semantic-action": "1.1.0",
    "simple-commit-message": "3.3.2",
    "standard": "10.0.3",
    "check-more-types": "2.24.0",
    "lazy-ass": "1.6.0"
  }
}
